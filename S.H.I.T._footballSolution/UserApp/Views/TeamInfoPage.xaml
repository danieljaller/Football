<Page x:Class="UserApp.TeamInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserApp"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="TeamInfoPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Tabellplats:" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Poäng:" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Målskillnad:" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Hemma-arena:" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Vinster:" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Förluster:" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Oavgjorda:" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="7" Grid.Column="0" Text="Gjorda mål:" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="8" Grid.Column="0" Text="Insläppta mål:" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="9" Grid.Column="0" Text="Röda kort:" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="10" Grid.Column="0" Text="Gula kort:" />
    </Grid>
</Page>
