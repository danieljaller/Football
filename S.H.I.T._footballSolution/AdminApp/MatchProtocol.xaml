                        </Style>
                    </Button.Style>
                </Button>
                <Button Name="addRedCardsHome" Grid.Row="10" Grid.Column="1" Margin="15,0,0,0" HorizontalAlignment="Left" Height="15" Width="15" Click="addRedCardsHome_Click">
                    <TextBlock VerticalAlignment="Center">+</TextBlock>
                    <Button.Style>
