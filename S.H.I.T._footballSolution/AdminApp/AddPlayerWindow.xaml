<Window x:Class="AdminApp.AddPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminApp"
        mc:Ignorable="d"
        Title="AddPlayerWindow" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Margin="20,0,0,0">Spelare:</TextBlock>
       
        <ListBox Grid.Row="0" Grid.Column="1" Margin="5">
            <ListBoxItem>
                <RadioButton GroupName="playerSelection" >Spelare 1</RadioButton>
            </ListBoxItem>
            <ListBoxItem>
                <RadioButton GroupName="playerSelection">Spelare 2</RadioButton>
            </ListBoxItem>
            <ListBoxItem>
                <RadioButton GroupName="playerSelection">Spelare 3</RadioButton>
            </ListBoxItem>
            <ListBoxItem>
                <RadioButton GroupName="playerSelection">Spelare 4</RadioButton>
            </ListBoxItem>
            <ListBoxItem>
                <RadioButton GroupName="playerSelection">Spelare 5</RadioButton>
            </ListBoxItem>
            <ListBoxItem>
                <RadioButton GroupName="playerSelection">Spelare 6</RadioButton>
            </ListBoxItem>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <RadioButton GroupName="playerSelection"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <Button Name="Ok" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" Margin="20" Height="23" Width="50">
            <TextBlock>Skapa</TextBlock>
        </Button>
        <Button Name="Cancel" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Margin="20" Height="23" Width="50">
            <TextBlock>Avbryt</TextBlock>
        </Button>
    </Grid>
</Window>
