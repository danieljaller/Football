<Window x:Class="AdminApp.AddExchangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminApp"
        mc:Ignorable="d"
        Title="AddExchangeWindow" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Margin="20,0,0,0">Utbytt:</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Margin="20,0,0,0">Inbytt:</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20,20,0,0">Matchminut:</TextBlock>
        <ListBox Grid.Row="0" Grid.Column="1" Margin="5">
            <ListBoxItem>
                <RadioButton GroupName="playerOut" >Spelare 1</RadioButton>
            </ListBoxItem>
            <ListBoxItem>
                <RadioButton GroupName="playerOut">Spelare 2</RadioButton>
            </ListBoxItem>
            <ListBoxItem>
                <RadioButton GroupName="playerOut">Spelare 3</RadioButton>
            </ListBoxItem>
            <ListBoxItem>
                <RadioButton GroupName="playerOut">Spelare 4</RadioButton>
            </ListBoxItem>
            <ListBoxItem>
                <RadioButton GroupName="playerOut">Spelare 5</RadioButton>
            </ListBoxItem>
            <ListBoxItem>
                <RadioButton GroupName="playerOut">Spelare 6</RadioButton>
            </ListBoxItem>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <RadioButton GroupName="playerOut"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Grid.Row="1" Grid.Column="1" Margin="5">
            <ListBoxItem>
                <RadioButton GroupName="playerIn" >Spelare 1</RadioButton>
            </ListBoxItem>
            <ListBoxItem>
                <RadioButton GroupName="playerIn">Spelare 2</RadioButton>
            </ListBoxItem>
            <ListBoxItem>
                <RadioButton GroupName="playerIn">Spelare 3</RadioButton>
            </ListBoxItem>
            <ListBoxItem>
                <RadioButton GroupName="playerIn">Spelare 4</RadioButton>
            </ListBoxItem>
            <ListBoxItem>
                <RadioButton GroupName="playerIn">Spelare 5</RadioButton>
            </ListBoxItem>
            <ListBoxItem>
                <RadioButton GroupName="playerIn">Spelare 6</RadioButton>
            </ListBoxItem>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <RadioButton GroupName="playerIn"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="5,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="20" Text="45"/>
        <Button Name="Ok" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left" Margin="20" Height="23" Width="50">
            <TextBlock>Skapa</TextBlock>
        </Button>
        <Button Name="Cancel" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" Margin="20" Height="23" Width="50">
            <TextBlock>Avbryt</TextBlock>
        </Button>
    </Grid>
</Window>
